<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/restrictionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="TestName"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:columnCount="4"
                android:rowCount="2">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="Min. hodnota: " />

                <TextView
                    android:id="@+id/restrictionMinVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="test" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="Max. hodnota: " />

                <TextView
                    android:id="@+id/restrictionMaxVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="test" />


                <TextView
                    android:id="@+id/restrictionNotifTypes"
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:layout_column="2"
                    android:layout_columnWeight="2"
                    android:layout_marginStart="20dp"
                    android:gravity="top|center"
                    android:text="" />

                <CheckBox
                    android:id="@+id/restrictionEnabled"
                    android:gravity="top"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:layout_column="3"
                    android:layout_gravity="end|top" />
            </GridLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>